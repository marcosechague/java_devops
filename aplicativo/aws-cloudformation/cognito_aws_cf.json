{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Configuracion Pool de usuarios",
    "Metadata": {},
    "Parameters": {
        "emailDefault": {
            "Type": "String",
            "Description": "correo para el usuario ADMIN - este usuario es el inicial",
            "ConstraintDescription": "Debe ser un correo v√°lido"
        }
    },
    "Mappings": {},
    "Conditions": {},
    "Resources": {
        "userPoolDummy" : {
            "Type" : "AWS::Cognito::UserPool",
            "Properties" : {
              "AdminCreateUserConfig" : {
                "AllowAdminCreateUserOnly" : true,
                "InviteMessageTemplate" : {
                    "EmailMessage" : "Se ha creado su usuario {username} y su contrase?a temporal es {####}",
                    "EmailSubject" : "Alta Cuenta AWS"
                  },
                "UnusedAccountValidityDays" : 7
              },
              "AutoVerifiedAttributes" : [ "email" ],
              "EmailVerificationMessage" : "Su c?digo de verificaci?n es {####}.",
              "EmailVerificationSubject" : "Su c?digo de verificaci?n",
              "Policies" : {
                "PasswordPolicy" : {
                    "MinimumLength" : 6,
                    "RequireLowercase" : false,
                    "RequireNumbers" : false,
                    "RequireSymbols" : false,
                    "RequireUppercase" : false
                  }
              },
              "UserPoolName" : "userPoolDummy"
            }
          },
          "clientAngular" : {
            "Type" : "AWS::Cognito::UserPoolClient",
            "Properties" : {
              "ClientName" : "angular",
              "ExplicitAuthFlows" : [ "ADMIN_NO_SRP_AUTH" ],
              "GenerateSecret" : false,
              "ReadAttributes" : [ "email" ],
              "RefreshTokenValidity" : 2,
              "UserPoolId" : { "Ref": "userPoolDummy" },
              "WriteAttributes" : [ "email" ]
            }
          },
          "userAdmin" : {
            "Type" : "AWS::Cognito::UserPoolUser",
            "Properties" : {
                "DesiredDeliveryMediums" : [ "EMAIL" ],
                "Username" : "admin",
                "UserAttributes" : [ {
                    "Name" : "email",
                    "Value" : {"Ref": "emailDefault"}
                  } ],
                "UserPoolId" : { "Ref": "userPoolDummy" }
            }
          },
          "adminGroup" : {
            "Type" : "AWS::Cognito::UserPoolGroup",
            "Properties" : {
              "Description" : "Grupo de usuarios administrador",
              "GroupName" : "ADMIN",
              "Precedence" : 5,
              "UserPoolId" : { "Ref": "userPoolDummy" }
            }
          },
          "adminUserToAdminGroup": {
            "Type" : "AWS::Cognito::UserPoolUserToGroupAttachment",
            "DependsOn": [ "userAdmin", "adminGroup" ],
            "Properties" : {
              "GroupName" : "ADMIN",
              "Username" : "admin",
              "UserPoolId" : { "Ref": "userPoolDummy" }
            }
          }
    },
    "Outputs": {
        "cognitoIdUserPool": {
            "Description": "ID del grupo Cognito",
            "Value": {
                "Ref": "userPoolDummy"
            },
            "Export": { "Name" : "cognito-pool-id" }
        },
        "clientIdAngular" : {
            "Description": "ID del cliente oauth angular",
            "Value": {
                "Ref": "clientAngular"
            },
            "Export": { "Name" : "cognito-client-angular" }
        }
    }
}
